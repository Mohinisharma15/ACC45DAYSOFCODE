
// Reversing the number and Checking palindreome number

int n,rem,rev=0;
printf("Enter the number you want to check is a palindrome or not \n ");
scanf("%d", &n);


int temp = n;

while(n!=0){
    rem = n%10;
    rev = rev*10 + rem;
    n = n/10;
}
printf("Reversed number is %d", rev);

if(temp==rev){
    printf("palindrome number ");
}
else{
    printf("Not a palindrome number ");
}

